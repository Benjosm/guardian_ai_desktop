{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch C++ Application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/your_executable_name",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/gdb.exe",// Use "/usr/bin/gdb" on Mac
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
